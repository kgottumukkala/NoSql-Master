@model IEnumerable<NoSqlWeb.Models.AvFile>

@{
    ViewBag.Title = "ViewAv";
}

<h2>ViewAv</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.FileName, "DownloadAv", new { id = item.Id, filetype = item.FileType})
        </td>
        
        <td>
            
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
